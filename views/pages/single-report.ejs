<% include ../partials/header %>

    <div class="container">

      <h1>Site report.</h1>
      <p><a href="/report-sortable/<%= reportid %>">Sortable.</a></p>

      <hr />

      <h4>Report ID: <%= reportid %></h4>
      <h4>Report Date: <%= thissite[0].created_at %></h4>
      <h4>Report Main Site URL: <a href="<%= thissite[0].url %>" target="_blank"><%= thissite[0].url %></a></h4>
      <h2>Overall Site Grade: <%= overallsitegrade %></h2>

      <hr />

      <div class="row">
        <div class="col-md-12">
        <table class="table table-striped table-bordered">
          <caption>Total links: <%= overallgradeobject.length %></caption>
          <thead>
            <tr>
              <th>Page URL</th>
              <th>Page Grade</th>
              <th>Page Report Link</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i < overallgradeobject.length; i++) { %>
               <tr>
                 <td><%= overallgradeobject[i].pagelink %></td>
                 <td <% if (overallgradeobject[i].pagegrade <= 70) { %>
                   class="bg-danger text-white"<% }
                   else if (overallgradeobject[i].pagegrade <= 80) { %>
                    class="bg-warning text-white"<% }
                  else { %>
                    class="bg-success text-white"<%
                  }%>><%= overallgradeobject[i].pagegrade %></td>
                 <td><a href="/report/<%= reportid %>/<%= overallgradeobject[i].pageid %>">LINK</a></td>
               </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      </div>

    </div>

<% include ../partials/footer %>
