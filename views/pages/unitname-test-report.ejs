<% include ../partials/header %>

    <div class="container">

      <h1>Unit Name test report.</h1>

      <hr />

      <h4>Report ID: <a href="/report/<%= data.siteID %>"><%= data.siteID %></a></h4>
      <h4>Page ID: <%= data._id %></h4>
      <h4>Page Link: <a href="<%= data.pageLink %>" target="_blank"><%= data.pageLink %></a></h4>
      <h4>Page Title: <%= data.results[0].pageTitle %></h4>
      <h2>Grade: <span <% if (unitnamegrade <= 70) { %>
        class="bg-danger text-white"<% }
        else if (unitnamegrade <= 80) { %>
         class="bg-warning text-white"<% }
       else { %>
         class="bg-success text-white"<%
       }%>><%= unitnamegrade %></span></h2>

      <p>Unit name must be Title Cased.</p>

      <hr />

      <div class="row">
        <div class="col-md-12">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Unit Name Text</th>
              <th>Casing</th>
              <th>Grade</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i < unitnamewithgrade.length; i++) { %>
               <tr>
                 <td><%= unitnamewithgrade[i].unitnametext %></td>
                 <td><%= unitnamewithgrade[i].casing %></td>
                 <td <% if (unitnamewithgrade[i].grade <= 70) { %>
                   class="bg-danger text-white"<% }
                   else if (unitnamewithgrade[i].grade <= 80) { %>
                    class="bg-warning text-white"<% }
                  else { %>
                    class="bg-success text-white"<%
                  }%>><%= unitnamewithgrade[i].grade %></td>
               </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      </div>

    </div>

<% include ../partials/footer %>
