<% include ../partials/header %>

    <div class="container">

      <h1>Buttons test report.</h1>

      <hr />

      <h4>Report ID: <a href="/report/<%= data.siteID %>"><%= data.siteID %></a></h4>
      <h4>Page ID: <%= data._id %></h4>
      <h4>Page Link: <a href="<%= data.pageLink %>" target="_blank"><%= data.pageLink %></a></h4>
      <h4>Page Title: <%= data.results[0].pageTitle %></h4>
      <h2>Grade: <span <% if (buttonsgrade <= 70) { %>
        class="bg-danger text-white"<% }
        else if (buttonsgrade <= 80) { %>
         class="bg-warning text-white"<% }
       else { %>
         class="bg-success text-white"<%
       }%>><%= buttonsgrade %></span></h2>

      <hr />

      <div class="row">
        <div class="col-md-12">
        <table class="table table-hover">
          <caption>Buttons on page: <%= buttonswithgrades.length %></caption>
          <thead>
            <tr>
              <th>Button Text</th>
              <th>Casing Type</th>
              <th>Grade</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i < buttonswithgrades.length; i++) { %>
               <tr>
                 <td><%= buttonswithgrades[i].buttontext %></td>
                 <td><%= buttonswithgrades[i].casing %></td>
                 <td <% if (buttonswithgrades[i].grade <= 70) { %>
                   class="bg-danger text-white"<% }
                   else if (buttonswithgrades[i].grade <= 80) { %>
                    class="bg-warning text-white"<% }
                  else { %>
                    class="bg-success text-white"<%
                  }%>><%= buttonswithgrades[i].grade %></td>
               </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      </div>

    </div>

<% include ../partials/footer %>
