<% include ../partials/testrunner-head %>

<script type="text/javascript">
  $(document).ready(function() {
      $('#singlereporttable').DataTable();
  } );
</script>

    <div class="container">

      <h1>Site report.</h1>
      <p><a href="/testrunner/report/<%= reportid %>">Non-sortable.</a></p>

      <hr />

      <h4>Report ID: <%= reportid %></h4>
      <h4>Report Date: <%= thissite[0].created_at %></h4>
      <h4>Report Main Site URL: <a href="<%= thissite[0].url %>" target="_blank"><%= thissite[0].url %></a></h4>
      <h2>Overall Site Grade: Grade %</h2>

      <hr />

      <div class="row">
        <div class="col-md-12">
        <table class="table table-striped table-bordered" id="singlereporttable">
          <caption>Total links: <%= overallgradeobject.length %></caption>
          <thead>
            <tr>
              <th>Page URL</th>
              <th>Page Grade</th>
              <th>Page Report Link</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i < overallgradeobject.length; i++) { %>
               <tr>
                 <td><%= overallgradeobject[i].pagelink %></td>
                 <td><%= overallgradeobject[i].pagegrade %></td>
                 <td><a href="/testrunner/report/<%= reportid %>/<%= overallgradeobject[i].pageid %>">LINK</a></td>
               </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      </div>

    </div>

<% include ../partials/testrunner-footer %>
